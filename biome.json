{
  "root": true,
  "files": {
    "includes": [
      "src/**/*"
    ]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "all"
    },
    "globals": [
      "gtag",
      "jestPuppeteer",
      "page"
    ]
  }
}
